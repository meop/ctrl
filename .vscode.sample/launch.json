    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "ctrl",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ctrl",
                    "--package=ctrl"
                ],
                "filter": {
                    "name": "ctrl",
                    "kind": "bin"
                }
            },
            "args": [
                "pkg",
                "up",
                "git"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "ctrl = tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=ctrl",
                    "--package=ctrl"
                ],
                "filter": {
                    "name": "ctrl",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}